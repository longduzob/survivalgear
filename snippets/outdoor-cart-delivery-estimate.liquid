{%- comment -%}
  Delivery Estimate Badge (Cart Drawer)
  
  Affiche l'estimation de livraison dans le cart :
  - Icon camion
  - Texte configurable
  - Style outdoor
  
  Usage:
    {% render 'outdoor-cart-delivery-estimate', settings: settings %}
  
  Settings required:
    - enable_cart_delivery_estimate (checkbox)
    - cart_delivery_text (text)
{%- endcomment -%}

{%- liquid
  assign enable_estimate = settings.enable_cart_delivery_estimate | default: true
  assign delivery_text = settings.cart_delivery_text | default: 'Livraison estimée : 2-4 jours ouvrés'
-%}

{%- if enable_estimate -%}
<div class="outdoor-cart-delivery-estimate">
  <svg class="outdoor-cart-delivery-estimate__icon" width="24" height="24" viewBox="0 0 24 24" fill="none">
    <path d="M16 3H1V16H16V3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path d="M16 8H20L23 11V16H16V8Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path d="M5.5 21C6.88071 21 8 19.8807 8 18.5C8 17.1193 6.88071 16 5.5 16C4.11929 16 3 17.1193 3 18.5C3 19.8807 4.11929 21 5.5 21Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    <path d="M18.5 21C19.8807 21 21 19.8807 21 18.5C21 17.1193 19.8807 16 18.5 16C17.1193 16 16 17.1193 16 18.5C16 19.8807 17.1193 21 18.5 21Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
  
  <div class="outdoor-cart-delivery-estimate__text">
    <strong>{{ delivery_text }}</strong>
  </div>
</div>
{%- endif -%}
